{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
        "singularName": "author",
        "pluralName": "authors",
        "displayName": "Author"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "username": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true,
            "unique": true
        },
        "bio": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "displayName": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "email": {
            "type": "email",
            "unique": true
        },
        "avatar": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "socialLinks": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": false
        },
        "articles": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::article.article",
            "mappedBy": "author"
        }
    }
}
